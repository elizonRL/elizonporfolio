---
const { href } = Astro.props;
---

<div>
  <a href=`${href}` target="_blank">
    <slot name="logo" />
  </a>
</div>

<style>
  div {
    padding: 10px;
    border: 1px solid #fff;
    border-radius: 20px;
    margin: 10px;
    max-width: min-content;
  }
  a {
    width: 240px;
    height: 56px;
    display: flex;
    align-items: center;
    text-decoration: none;
    color: inherit;
  }
  div:hover {
    background-color: #f5f5f5;
  }
</style>

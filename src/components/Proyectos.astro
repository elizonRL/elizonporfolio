---
import Dev from "./logos/Dev.astro";
import Link from "./logos/Link.astro";
import Angular from "./logos/Angular.astro";
import Githup from "./logos/Githup.astro";
import Css from "./logos/Css.astro";
import Ionic from "./logos/Ionic.astro";
---

<section>
  <div class="title">
    <Dev />
    <h1>Proyectos</h1>
  </div>
  <div class="card">
    <div>
      <img src="/img/egresados.jpg" alt="Proyecto Egresado uasd" />
    </div>
    <div class="info">
      <h2>Proyecto Egresado UASD</h2>
      <div class="bages">
        <span>
          <Ionic />
          Ionic</span>
        <span>
          <Angular />
          Angular</span
        >
        <span>
          <Css />
          CSS
        </span>
      </div>
      <p>
        Proyecto de la Universidad Autónoma de Santo Domingo, para la gestión de
        egresados.
      </p>
      <div class="btn">
        <a
          href="https://egresados.uasd.edu.do"
          target="_blank"
          class="disabled"
        >
          <p><Link /></p>
          Ver Proyecto
        </a>
        <a href="" target="_blank">
          <p><Githup /></p>
          Ver Proyecto
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .title {
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  .card {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin-top: 2rem;
  }
  .info {
    margin-left: 30px;
  }
  .btn {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    margin-top: 1rem;
  }
  .bages {
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
    margin-bottom: 1rem;
  }
  img {
    width: 300px;
    height: 250px;
    object-fit: cover;
    border-radius: 10px;
    transition: all 0.3s ease-in-out;
  }
  img:hover {
    transform: scale(1.05);
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
  }
  h2 {
    margin-top: 0;
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  h1 {
    margin-left: 2rem;
    background: linear-gradient(90deg, #ff7e5f, #feb47b);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  span {
    display: flex;
    background-color: rgba(0, 0, 0, 0.4);
    text-align: center;
    justify-content: center;
    align-items: center;
    color: #fff;
    padding: 0 25px;
    border-radius: 20px;
    border: 1px solid #fff;
  }
  a {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 1rem;
    color: #fff;
    text-decoration: none;
    font-size: 1rem;
    border: solid 1px #fff;
    width: 120px;
    height: 40px;
    border-radius: 30px;
    transition: all 0.3s ease-in-out;
  }
  a:hover {
    background-color: #fff;
    color: #000;
    transform: scale(1.1);
  }
  p {
    margin-right: 5px;
  }
  .disabled {
    pointer-events: none;
  }
  @media (max-width: 800px) {
    .card {
      flex-direction: column;
      align-items: center;
    }
    img {
      width: 100%;
      height: 300px;
      margin-bottom: 1rem;
    }
  }
</style>

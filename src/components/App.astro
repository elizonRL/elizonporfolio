---
import Layout from "../layouts/Layout.astro";
import Info from "../components/Info.astro";
import Proyectos from "../components/Proyectos.astro";
import Estudios from "../components/Estudios.astro";
import Skills from "../components/Skills.astro";
import Aboutme from "../components/Aboutme.astro";

// traducciones con i18n
import {getI18N} from "../i18n";

const {currentLocale = 'en'} = Astro;
const i18n = getI18N({currentLocale});
---

<Layout
  title={i18n.SEO_TITLE}
  description={i18n.SEO_DESCRIPTION}
>
  <main>
    <Info />
    <Proyectos id="proyects" />
    <Estudios id="estudios" />
    <Skills id="stack-&-softSkill" />
    <Aboutme id="about-me" />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 20px;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  @media (max-width: 800px) {
    main {
      margin: auto;
      width: 100%;
    }
  }
</style>
---
import Boton from "../components/Boton.astro";
import Linkedin from "./logos/Linkedin.astro";
import Email from "./logos/Email.astro";
import DominicanFlag from "./logos/DominicanFlag.astro";
---

<section>
  <div class="header">
    <img
      src="/img/perfilElizon.jpg"
      alt="Imagen de perfil de Elizon"
      class="imagen"
    />
    <h1>Welcome to <spam class="gradinat">Elizon</spam> Porfolio</h1>
    <span class="flag">
      <DominicanFlag />
    </span>
  </div>
  <div class="descrition">
    <p>
      +2 years of experience in <spam class="gradinat"
        >full stack development</spam
      >, graduate in computer science from the Autonomous University of Santo
      Domingo (UASD). I love programming and technology in general.
    </p>
    <div class="buttons">
      <Boton href="https://www.linkedin.com/in/elizon-rodriguez-91ab21236/">
        <Linkedin slot="logo" />
        <span slot="text">Linkedin</span>
      </Boton>
      <Boton href="mailto:elizorodriguez16@gmail.com">
        <Email slot="logo" />
        <span slot="text">Contact</span>
      </Boton>
    </div>
  </div>
</section>
<style>
  /* Estilos de la seccion de presentacion */
  /*Clases */
  .imagen {
    width: 100px;
    height: 100px;
    border-radius: 20px;
    object-fit: cover;
  }
  .header {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
  }
  .gradinat {
    background: linear-gradient(90deg, #ff7e5f, #feb47b);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .buttons {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-top: 20px;
  }
  .flag {
    margin-left: 10px;
  }
  /* Etiquetas */
  h1 {
    margin-left: 40px;
    font-weight: 700;
    font-size: 35px;
  }
  p {
    margin-top: 20px;
    font-size: 20px;
    text-align: center;
    text-wrap: wrap;
    font-weight: 700;
  }
  section {
    margin: auto;
    
    padding: 20px 0;
    border-bottom: 1px solid #e0e0e0;
  }
  span {
    font-weight: 700;
    margin: 5px;
  }
</style>

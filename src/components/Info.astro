---
import Boton from "../components/Boton.astro";
import Linkedin from "./logos/Linkedin.astro";
import Email from "./logos/Email.astro";
import DominicanFlag from "./logos/DominicanFlag.astro";
import Dwfiles from "./logos/Dwfiles.astro";
// traduccion con i18n
import { getI18N } from "../i18n";

const { currentLocale = "en" } = Astro;
const i18n = getI18N({ currentLocale });
---

<section>
  <div class="header">
    <img
      src="/img/me.webp"
      alt="Imagen de perfil de Elizon"
      class="imagen"
    />
    <h1>Welcome to <spam class="gradiant">Elizon</spam> Porfolio</h1>
    <span class="flag">
      <DominicanFlag />
    </span>
  </div>
  <div class="descrition">
    <p>
      {i18n.HERRO_DESCRIPTION}
      <spam class="gradiant">{i18n.HERRO_DESCRIPTION_GD}</spam>, {
        i18n.HERRO_DESCRIPTION_2
      }
    </p>
    <div class="buttons">
      <Boton href="https://www.linkedin.com/in/elizon-rodriguez-91ab21236/">
        <Linkedin slot="logo" />
        <span slot="text">Linkedin</span>
      </Boton>
      <Boton href="mailto:elizorodriguez16@gmail.com">
        <Email slot="logo" />
        <span slot="text">Contact</span>
      </Boton>
      <Boton href="./curriculum-Nuevo.pdf" download="Elizon's-CV">
        <Dwfiles slot="logo" />
        <span slot="text">Download CV</span>
      </Boton>
    </div>
  </div>
  <style>
    /* Estilos de la seccion de presentacion */
    /*Clases */
    .imagen {
      width: 100px;
      height: 100px;
      border-radius: 20px;
      object-fit: cover;
    }
    .header {
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: center;
    }
    .gradiant {
      background: linear-gradient(90deg, #ff7e5f, #feb47b);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    .buttons {
      display: flex;
      flex-direction: row;
      justify-content: center;
      align-items: center;
      gap: 20px;
      margin-top: 20px;
    }
    .flag {
      display: flex;
      justify-content: center;
      align-items: center;
    }
    /* Etiquetas */
    h1 {
      margin-left: 40px;
      font-weight: 700;
      font-size: 35px;
    }
    p {
      margin-top: 20px;
      font-size: 20px;
      text-align: center;
      text-wrap: wrap;
      font-weight: 700;
    }
    section {
      padding: 20px 0;
      border-bottom: 1px solid #e0e0e0;
    }
    span {
      font-weight: 700;
      margin: 5px;
    }
    @media (max-width: 768px) {
      section {
        min-width: 100%;
        padding: 20px 0;
        width: 100%;
      }
      .header {
        flex-direction: column;
        align-items: center;
      }
      h1 {
        margin-left: 0;
        margin-top: 20px;
      }
      .imagen {
        margin-top: 20px;
      }
      .buttons {
        flex-direction: column;
        gap: 10px;
      }
    }
  </style>
</section>

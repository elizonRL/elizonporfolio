    date: `${i18n.PERIOD_JAVA}`,
    generales: [
      `${i18n.JAVA_DEGREE}`,
      `${i18n.ACADEMY}`,
      `${i18n.FACULTY}`,
      `${i18n.SCHOOL}`,
      `${i18n.DEGREE_CERTIFICATE}`,
      

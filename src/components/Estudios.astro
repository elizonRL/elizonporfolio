---
import Birrete from "./logos/Birrete.astro";
---

<section>
  <div class="title">
    <Birrete />
    <h1>Estudios</h1>
  </div>
  <div class="card">
    <div>
      <h2>Universidad Autonoma de Santo Domingo (UASD)</h2>
      <span>2016 - 2024</span>
      <div class="generales">
        <p>Titulo - Licenciado en Informatica</p>
        <p>Academia - UASD</p>
        <p>Faculltad - Ciencias</p>
        <p>Escuela - Informatica</p>
      </div>
    </div>
  </div>
  <div class="card">
    <div>
      <h2>Web Developer</h2>
      <span>2022 - 2022</span>
      <p>Desarrollo con HTML CSS Y javaScrit</p>
    </div>
  </div>
</section>
<style>
  .card {
    position: relative;
    padding: 0 20px;
  }
  .card::before {
    content: "";
    position: absolute;
    width: 1px;
    height: 120%;
    background: linear-gradient(90deg, #ff7e5f, #feb47b);
    left:-15px;
    top: 10px;
  }
  .card::after {
    content: "";
    position: absolute;
    width: 15px;
    height: 15px;
    border-radius: 50%;
    background: #eaeaea;
    left: -22px;
    top: 8px;
  }
  .title {
    display: flex;
    align-items: center;
  }
  .title h1 {
    background: linear-gradient(90deg, #ff7e5f, #feb47b);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .generales {
    display: grid;
    grid-template-columns: repeat(2, 300px);
    margin-top: 10px;
  }
  h2 {
    font-size: 20px;
  }
  span {
    font-size: 14px;
    color: #9e9c9c;
  }
  p {
    font-size: 16px;
  }
</style>

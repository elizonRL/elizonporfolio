  <style>
    .card {
      padding: 0 20px;
      border-left: 1px solid #eaeaea;
    }
    .title {
      display: flex;
      align-items: center;
    }
    h2 {
      font-size: 20px;
    }
    span {
      font-size: 14px;
      color: #9e9c9c;
    }
    p {
      font-size: 16px;
    }
  </style>


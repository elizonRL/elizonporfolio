      `${i18n.CARREER_MASTERMIND}`,
      `${i18n.ACADEMY_MASTERMIND}`,
      `${i18n.SKILLS_MASTERMIND}`,
      `${i18n.DEGREE_CERTIFICATE}`,
    ],
  },
];
---


<style>
  .card {
    position: relative;
    padding: 0 20px;
  }
  .card::before {
    content: "";
    position: absolute;
    width: 1px;
    height: 120%;
    background: linear-gradient(90deg, #ff7e5f, #feb47b);
    left: -15px;
    top: 10px;
  }
  .card::after {
    content: "";
    position: absolute;
    width: 15px;
    height: 15px;
    border-radius: 50%;
    background: #fff;
    left: -22px;
    top: 8px;
  }
  .title {
    display: flex;
    align-items: center;
  }
  .title h1 {
    margin-left: 10px;
    background: linear-gradient(90deg, #ff7e5f, #feb47b);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-transform: uppercase;
  }
  .generales {
    display: grid;
    grid-template-columns: repeat(2, 300px);
    margin-top: 10px;
  }
  h2 {
    font-size: 20px;
  }
  span {
    font-size: 14px;
    color: #9e9c9c;
  }
  p {
    font-size: 16px;
  }
  section {
    margin-bottom: 100px;
  }
</style>

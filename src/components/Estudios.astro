---
import Birrete from "./logos/Birrete.astro";
---

<section>
  <div class="title">
    <Birrete />
    <h1>Estudios</h1>
  </div>
  <div class="card">
    <div>
      <h2>Universidad Autonoma de Santo Domingo (UASD)</h2>
      <span>2016 - 2024</span>
      <p>Lienciatura en Informatica</p>
      <p>Grado - Licenciado en Informatica</p>
    </div>
  </div>
  <div class="card">
    <div>
      <h2>Web Developer</h2>
      <span>2022 - 2022</span>
      <p>Desarrollo con HTML CSS Y javaScrit</p>
    </div>
  </div>
